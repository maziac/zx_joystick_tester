        },

        {
            "type": "z80-debug",
            "request": "launch",
            "unitTests": true,
            "name": "Unit Tests",
            "zhostname": "localhost",
            "zport": 10000,
            "topOfStack": "stack_top",
            "resetOnLaunch": true,
            "skipInterrupt": true,
            "execAddress": "LBL_MAIN",
            "commandsAfterLaunch": [
                //"-wpmem disable",
                //"-assert disable",
                //"-sprites",
                //"-patterns"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
